<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="icmpSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="configLocation" value="classpath:DaemonDaoMapperConfig.xml"/>
        <property name="dataSource">
            <ref bean="dataSource"/>
        </property>
    </bean>


    <!-- sampleBean -->
    <bean id="testTablePojoMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface"
                  value="com.wisdombud.electricity.dao.TestTablePojoMapper"></property>
        <property name="sqlSessionFactory" ref="icmpSqlSessionFactory"></property>
    </bean>


</beans>
